.right
  .right__top
    .right__top--left
      .right__top--title
        = @group.name
      .right__top--bottom
        = "message : #{current_user.name}"
    .right__top--edit
      =link_to "Edit", new_group_path, class: "right__top--btn"
        

  .right__content
    = render @messages

  .right__bottom
    .right__bottom--text
      .right__bottom--form
        = form_for [@group, @message] do |f|
          = f.text_field :content, id: "form", placeholder: 'Type a message' 
          = f.label :image, class: "label" do
            = icon('far', 'image', class: "icon")
            = f.file_field :image, class: "file"
          = f.submit 'Send', id: 'send'
        